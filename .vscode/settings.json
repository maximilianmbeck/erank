            "exclude": [
                // ".vscode/settings.json",
                "__pycache__",
                ".ipynb_checkpoints", 
                "outputs/**",
                "tmp/**"
            ],
            "deleteFiles": true, 
            "upOnly": true
        }, 
        {
            "localPath": "${workspaceFolder}/../ml_utilities",
            "remotePath": "dragonfly:/system/user/beck/pwbeck/projects/regularization/ml_utilities",
            "exclude": [
                // ".vscode/settings.json",
                "__pycache__",
                ".ipynb_checkpoints", 
